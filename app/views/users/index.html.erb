<h1>User Listing</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Active</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.type %></td>
    <td><%=h user.id %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%=h user.active %></td>
    <td><%= link_to 'Show', eval("#{user.type.underscore}_path(user)") %></td>
  </tr>
<% end %>
</table>