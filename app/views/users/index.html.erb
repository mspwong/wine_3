<h1>User Listing</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Active</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.type %></td>
    <td class="user_id"><%=h user.id %></td>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td class="active"><%=h user.active %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to toggle_label(user), "#", :onclick=>"users.toggle_active(this);" %></td>
  </tr>
<% end %>
</table>